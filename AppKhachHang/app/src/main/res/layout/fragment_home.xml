<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HomeFragment">


   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <androidx.appcompat.widget.Toolbar
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/main_toolBar"
               android:background="#FFF"
               app:titleTextColor="#000000"
               android:elevation="4dp"
               app:menu="@menu/toolbar_home_menu"
               app:titleMarginStart="20dp"
               app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
               android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="8dp"
               android:layout_margin="10dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="20dp"
                   android:padding="4dp"
                   android:textColor="#5FB1C1"
                   android:textStyle="bold"
                   android:text="Hãng"/>
           </androidx.cardview.widget.CardView>
           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/ryc_hang"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="10dp"
               tools:listitem="@layout/item_hang_san_xuat">
           </androidx.recyclerview.widget.RecyclerView>
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="8dp"
               android:layout_margin="10dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="20dp"
                   android:padding="4dp"
                   android:textColor="#5FB1C1"
                   android:textStyle="bold"
                   android:text="Hot nhất"/>
           </androidx.cardview.widget.CardView>
           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/ryc_sphot"
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:layout_marginStart="10dp"
               tools:listitem="@layout/item_san_pham">
           </androidx.recyclerview.widget.RecyclerView>
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="8dp"
               android:layout_margin="10dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="20dp"
                   android:padding="4dp"
                   android:textColor="#5FB1C1"
                   android:textStyle="bold"
                   android:text="Sản phẩm"/>
           </androidx.cardview.widget.CardView>
           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/ryc_sp"
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:layout_marginStart="10dp"
               tools:listitem="@layout/item_san_pham">
           </androidx.recyclerview.widget.RecyclerView>
       </LinearLayout>
   </ScrollView>


</FrameLayout>